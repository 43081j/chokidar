{
  "name": "chokidar",
  "description": "Minimal and efficient cross-platform file watching library",
  "version": "4.0.0-alpha",
  "homepage": "https://github.com/paulmillr/chokidar",
  "author": "Paul Miller (https://paulmillr.com)",
  "contributors": ["Paul Miller (https://paulmillr.com)", "Elan Shanker"],
  "engines": {
    "node": ">= 18"
  },
  "type": "module",
  "main": "lib/index.js",
  "dependencies": {
    "is-binary-path": "2.1.0",
    "micro-should": "0.4.0",
    "normalize-path": "3.0.0",
    "readdirp": "github:paulmillr/readdirp"
  },
  "devDependencies": {
    "@types/node": "20.12.12",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "chai": "4.3.4",
    "eslint": "8.7.0",
    "mocha": "9.1.4",
    "rimraf": "5.0.5",
    "sinon": "12.0.1",
    "sinon-chai": "3.7.0",
    "typescript": "5.4.2",
    "upath": "2.0.1"
  },
  "files": ["lib/*.js", "lib/*.d.ts"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulmillr/chokidar.git"
  },
  "bugs": {
    "url": "https://github.com/paulmillr/chokidar/issues"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "lint": "eslint --ext=ts --report-unused-disable-directives --ignore-path .gitignore .",
    "mocha": "mocha --exit --timeout 90000",
    "test": "npm run build && npm run lint && npm run mocha"
  },
  "keywords": ["fs", "watch", "watchFile", "watcher", "watching", "file", "fsevents"],
  "funding": "https://paulmillr.com/funding/"
}
